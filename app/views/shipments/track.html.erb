<% if @flight_id.getFlightIDResult.present? %>
  <div>
    <h2>Shipment Tracking</h2>
  </div>

  <div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th>Flight Ident</th>
        <th>Tracking code</th>
        <th>Product</th>
        <th>Quotation</th>
        <th>Shipment Tracking Status</th>
        <th>Origin City</th>
        <th>Destination City</th>
      </tr>
      </thead>

      <tbody>
        <tr>
          <td><%= @shipment.ident %></td>
          <td><%= @shipment.tracking_code %></td>
          <td><%= @shipment.product %></td>
          <td><%= @shipment.quotation %></td>
          <% if Time.at(@flight_info.flightInfoExResult.flights[0].estimatedarrivaltime) > Time.now %>
            <td><%= "Flight is enroute" %></td>
          <% else %>
            <td><%= "Shipment Arrived at Destination" %></td>
          <% end %>
          <td><%= @flight_info.flightInfoExResult.flights[0].originCity %></td>
          <td><%= @flight_info.flightInfoExResult.flights[0].destinationCity %></td>
        </tr>
      </tbody>
    </table>
  </div>


  <br>
<% else %>
  <div>
    <h2>Shipment Tracking</h2>
  </div>

  <div>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
      <tr>
        <th>Flight Ident</th>
        <th>Tracking code</th>
        <th>Product</th>
        <th>Quotation</th>
        <th>Shipment Tracking Status</th>
      </tr>
      </thead>

      <tbody>
      <tr>
        <td><%= @shipment.ident %></td>
        <td><%= @shipment.tracking_code %></td>
        <td><%= @shipment.product %></td>
        <td><%= @shipment.quotation %></td>
        <td><%= "Flight has been scheduled but not departed" %></td>
      </tr>
      </tbody>
    </table>
  </div>
<% end %>


